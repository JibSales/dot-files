# load zgen
source "${HOME}/.zgen/zgen.zsh"

path=(
  $HOME/bin
  $HOME/.dotfiles/bin
  $HOME/.dotfiles-local/bin
  $path
)

# if the init scipt doesn't exist
if ! zgen saved; then
  source "${HOME}/.dotfiles/zsh/loader.zsh"
fi

# Source the local stuff
for module in $HOME/.dotfiles/zsh/modules/*.zsh; do
  source $module
done

for module in $HOME/.dotfiles-local/zsh/*.zsh; do
  source $module
done


